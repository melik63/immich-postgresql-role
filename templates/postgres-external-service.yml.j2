apiVersion: v1
kind: Service
metadata:
  name: postgres-external
  namespace: {{ postgres_namespace }}
  annotations:
    metallb.universe.tf/allow-shared-ip: "immich-shared"
spec:
  selector:
    app: postgres
  ports:
    - protocol: TCP
      port: 5432
      targetPort: 5432
      name: postgres
  type: {{ postgres_service_type | default('NodePort') }}
